<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"
	>
	
<hibernate-mapping package="domain">
	<class name="Contact" table="Contact">
		<id name="contactId" type="long" column="ID_CONTACT" >
			<generator class="increment"/>
		</id>

		<property name="firstName">
			<column name="FIRST_NAME" />
		</property>
		
		<property name="lastName">
			<column name="LAST_NAME" />
		</property>
		
		<property name="email">
			<column name="EMAIL" />
		</property>

		<set name="phoneNumbers" inverse="true">
			<key column="ID_CONT"  />
			<one-to-many class="PhoneNumber"/>
		</set>

		<set name="contactgroup" table="Participation" cascade="save-update">
			<key column="ID_CONTACT" />
			<many-to-many class="ContactGroup" column="ID_CONTACT_GROUP"  />
		</set>

		<!-- address, one to one connection -->
		<many-to-one name="address" column="ID_ADDRESS" unique="true"/>

		<joined-subclass name="Entreprise" table="Entreprise">
			<key column="ID_ENTREPRISE"  />
			<property name="numSiret">
				<column name="NUM_SIRET" />
			</property>
		</joined-subclass>
	</class>
</hibernate-mapping>